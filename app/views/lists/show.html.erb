
<h1><%= @list.name %></h1>

<%= pluralize(@list.movies.size, 'movie') %></span>


<div>
<%= "You haven't saved any movies yet!" if @list.movies.empty? %>    
</div>
  <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

  <div >
    <% @list.bookmarks.each do |bookmark| %>
      <ul>
      <li> 
      <%= render 'bookmark', bookmark: bookmark, movie: bookmark.movie, list: @list %>
      <%= link_to'Delete', bookmark_path(bookmark), method: :delete %>
      </li> 
      </ul>
      
    <% end %>
  </div>

 <%= link_to new_list_bookmark_path(@list), class: 'btn btn-primary' do %>
    <i class="fas fa-plus"></i> Add movie
  <% end %>

  <%= link_to list_path(@list), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this list?' } do %>
    <i class="fas fa-trash-alt"></i> Delete list
  <% end %>
    
  <%= link_to lists_path, class: 'btn btn-primary' do %>
    <i class="fas fa-trash-alt"></i> Back to lists
  <% end %>
    
